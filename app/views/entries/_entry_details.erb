<b class="details_info"><%= t(:title) %></b>: <%= entry.title %><br />
<b class="details_info"><%= t(:author) %></b>: <%= link_to entry.agent.name, entry.agent %><br />
<b class="details_info"><%= t(entry.container.class.to_s.underscore, :count => 1) %></b>: <%= link_to entry.container.name, entry.container %><br />
<b class="details_info"><%= t(:created_at, :date => localize(entry.created_at)) %><br />
<b class="details_info"><%= t(:updated_at, :date => localize(entry.updated_at)) %><br />
<% if entry.content.categories.any? -%>
<b class="details_info"><%= t('category.other')%></b>: <%= entry.content.categories.map{ |c| link_to(sanitize(c.name), c) }.join(", ") %><br />
<% end -%>
<%= link_to(t(:show, :scope => entry.content.class.to_s.underscore), polymorphic_path([ entry.container, entry.content ]), {:class => "view action"}) %>
<%= link_to(t(:edit, :scope => entry.content.class.to_s.underscore), edit_polymorphic_path([ entry.container, entry.content ]),{:class => "edit action"}) %>
<%= link_to(t(:delete, :scope => entry.content.class.to_s.underscore), polymorphic_path([ entry.container, entry.content ]), {:class => "delete action", :confirm => t(:confirm_delete, :scope => entry.content.class.to_s.underscore), :method => :delete}) %>
