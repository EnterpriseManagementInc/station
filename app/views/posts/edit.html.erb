<h2><%= title("Edit #{ @entry.content.class.to_s }".t) %></h2>

<% unless error_messages_for(:entry).blank? && error_messages_for(:content).blank? -%>
<div class="errors">
  <%= error_messages_for :entry %>
  <%= error_messages_for :content %>
</div>
<% end -%>

<% form_for(:entry, 
            :url => @entry, 
            :html => { :method => :put,
                       :multipart => true }) do |f| -%>
  <%= render :partial => "form", :object => f %>

  <%= submit_tag "Update" %>
<% end -%>
