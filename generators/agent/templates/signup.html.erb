<h2><%%= title %></h2>

<%%= error_messages_for :agent %>

<%% form_for :agent, :url => <%= table_name %>_path do |f| -%>
<p><label for="login"><%%= t(:"agents.authentication.login") %></label><br/>
<%%= f.text_field :login %></p>

<p><label for="email"><%%= t(:email) %></label><br/>
<%%= f.text_field :email %></p>

<%% if @agent.needs_password? -%>

<p><label for="password"><%%= t(:"agents.authentication.password") %></label><br/>
<%%= f.password_field :password %></p>

<p><label for="password_confirmation"><%%= t(:"agents.authentication.confirm_password") %></label><br/>
<%%= f.password_field :password_confirmation %></p>

<%% else -%>
  <%%= t(:associating_to_id, :id => session[:openid_identifier]) %>
<%% end -%>

<p><%%= submit_tag ( authenticated? ? t(:create) : t(:join) ) %></p>
<%% end -%>
